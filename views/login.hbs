<form action="/" method="POST">
  <div style="display: flex; flex-direction: column; align-items:center; width: 500px;">
    <h2>Account Login</h2>
    <input type="text" name="email" placeholder="Email" style="height:30px;">
    <input type="text" name="password" placeholder="Password" style="margin-top:10px; height:30px">
    <button type="submit" style="margin-top:10px;">Sign in</button>
    {{#if loginFail}}
    <div><span style="color:red">Please recheck your email or password.</span></div>
    {{/if}}
  </div>
</form>